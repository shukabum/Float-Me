{
  "manifest_version": 3,
  "name": "Float Me",
  "description": "Convert any browser tab in to a mini floating window",
  "version": "1.0",
  "permissions": ["tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/logo.png",
    "128": "icons/logo1.png",
    "32": "icons/logo3.png",
    "48": "icons/logo4.png"
  }
}
